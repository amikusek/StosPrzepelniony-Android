<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pl.sggw.stosprzepelniony">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".viper.login.LoginActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>
        <activity
                android:name=".viper.main.MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".viper.register.RegisterActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen.Blue"/>
        <activity
                android:name=".viper.reset_password.ResetPasswordActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen.Blue"/>
        <activity
                android:name=".viper.user.UserActivity"
                android:parentActivityName=".viper.main.MainActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name=".viper.new_advertisement.NewAdvertisementActivity"
                android:parentActivityName=".viper.main.MainActivity"
                android:theme="@style/Theme.NewAdTheme"/>
        <activity
                android:name=".viper.splash.SplashActivity"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>
    </application>

</manifest>